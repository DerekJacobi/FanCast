
<h1>Broadcasters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Twitter</th>
      <th>Facebook</th>
      <th>Instagram</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><a href="/users/<%=user.id%>"><%= user.name %></a></td>
        <td><%= user.location %></td>
        <td><a href="/users/<%=user.twitter%>"><i class="fa fa-twitter-square"></i></a></td>
        <td><a href="/users/<%=user.facebook%>"><i class="fa fa-facebook-square"></i></a></td>
        <td><a href="/users/<%=user.instagram%>"><i class="fa fa-instagram"></i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
