
<body class="broadcast-home">
  <div class="broadcast">
    <div class="bc-left-column">
    <!--Mixlr link  -->
    <iframe src="https://mixlr.com/<%=@broadcaster.mixlr%>/embed" width="100px" height="180px" scrolling="no" frameborder="no" marginheight="0" marginwidth="0"></iframe>
    <% if @broadcaster.twitter != "" %>
      <a href="http://twitter.com/<%=@broadcaster.twitter%>" target="_blank"><i class="fa fa-twitter-square" style="font-size: 50px;"></i></a>&nbsp&nbsp&nbsp
    <% end %>

    <% if @broadcaster.instagram != ""%>
      <a href="http://instagram.com/<%=@broadcaster.instagram%>" target="_blank"><i class="fa fa-instagram" style="font-size: 50px;"></i></a>&nbsp&nbsp&nbsp
    <% end %>

    <% if @broadcaster.facebook != "" %>
      <a href="http://facebook.com/<%=@broadcaster.facebook%>" target="_blank"><i class="fa fa-facebook-official" style="font-size: 50px;"></i></a>
    <% end %>
  </div>
  <div class="bc-right-column">
    <a class="twitter-timeline" href="https://twitter.com/NFL" data-widget-id="630468668858703872">Tweets by @NFL</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
  </div>
</div>
</body>
