<div class="teampage">
  <div class='logo-next-event'>

    <div class="main-team">
      <div class='team-logo'>
        <img src="http://www.brendanhastings.nyc/fc/nfl/<%=@team%>.jpg" alt= @team + "logo" />
      </div>
    </div>

    <div class='next-game'>
      <div class="mdl-card mdl-shadow--2dp demo-card-event">
        <div class="mdl-card__title mdl-card--expand">
          <h4>
            Next Game: <%= @next_opponent %><br>
            Date: <%= @nextgamedate %>
          </h4>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Add to Calendar
          </a>
          <div class="mdl-layout-spacer"></div>
          <i class="material-icons">event</i>
        </div>
      </div>
    </div>

  </div>

  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header
              mdl-layout--fixed-tabs">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <% if @follow == true %>
        <span class="mdl-layout-title"><%= @team %> <button class="team-follow-button">Follow the <%= @team %></button>
        </span>
        <% elsif @follow == false %>
        <span class="mdl-layout-title"><%= @team %> <button class="team-follow-button">Unfollow the <%= @team %></button>
        </span>
        <% elsif @follow == 1 %>
        <span class="mdl-layout-title"><%= @team %> <button class="team-follow-button">Follow the <%= @team %></button>
        </span>
        <% end %>
      </div>
      <!-- Tabs -->
      <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <a href="#fixed-tab-1" class="mdl-layout__tab is-active">Broadcasters</a>
        <a href="#fixed-tab-2" class="mdl-layout__tab">Team Info</a>
      </div>
    </header>

    <main class="mdl-layout__content">

      <section class="mdl-layout__tab-panel" id="fixed-tab-1">
        <div class="page-content">
          <div class="broadcasters">
            <h3>Most Popular Broadcasters</h3>
          </div>
        </div>
      </section>
      <section class="mdl-layout__tab-panel" id="fixed-tab-2">
        <div class="page-content">

          <div class='venue-info'>
            <h3> <%= @team %></h3>
            <p>Stadium: <%= @stadium %> </p>
            <p>City: <%= @city %>, State: <%= @state %> </p>
            <p>Capacity: <%= @capacity %> </p>
            <p>Surface: <%= @surface  %> </p>
            <p>Type: <%= @type %></p>
          </div>

          </div>
      </section>
    </main>
  </div>
</div>

<% if current_user && @follow == 1%>
  <script>
    $(document).ready(function(){
      $(".team-follow-button").bind("click", function(){
        console.log('follow is 1');
        <% @followedteams = FollowTeam.new %>
        <% @followedteams.user_id = current_user.id %>
        <% @followedteams.team = @team %>
        <% @followedteams.active = true %>
        <% @followedteams.save %>
      });
    });
  </script>
  <% elsif @follow == true %>
  <script>
    $(document).ready(function(){
      $(".team-follow-button").bind("click", function(){
        console.log('follow is true');
        <% @followteams.active = true %>
        <% @followedteams.save %>

      });
    });
  </script>
  <% elsif @follow == false %>
  <script>
    $(document).ready(function(){
      $(".team-follow-button").bind("click", function(){
        console.log('follow is false');
        <% @followteams.active = false %>
        <% @followedteams.save %>

      });
    });
  </script>
<% end %>
